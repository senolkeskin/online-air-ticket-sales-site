    @model TicketDetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.Ticket.ImageUrl" alt="@Model.Ticket.To" class="img-fluid" />
    </div>
    <div class="col-md-9">
        <h1 class="mb-3">
            @Model.Ticket.To @Model.Ticket.From
        </h1>
        <hr />
        @foreach (var category in Model.Categories)
        {
            <a href="#" class="btn btn-link p-0 mb-3">@category.Name</a>
        }
    <div class="mb-3">
        <h4 class="text-primary mb-3">
            @Model.Ticket.Price TL
        </h4>

        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
            <input type="hidden" name="ticketId" value="@Model.Ticket.Id" />
            <div class="input-group mb-3">
                <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width:100px;" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-cart-plus"></i> Add Reservation
                    </button>
                </div>
            </div>
        </form>
    </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p class="p-3">
            @Html.Raw(Model.Ticket.Description)
        </p>
    </div>
</div>


@model  List<OrderListModel>
@{
    ViewData["Title"] = "GetOrders";
}

<h1>Received Tickets</h1>
<hr />
@foreach (var order in Model)
{
<table class="table table-bordered table table-sm-mb-3">
    <thead>
        <tr>
            <td colspan="2">  Id: #@order.OrderId </td>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderItem in order.OrderItems)
        {
        <tr>
            <td>
                <img src="~/img/@orderItem.ImageUrl" width="50" />
            </td>
            <td>
                @orderItem.To @orderItem.From
            </td>
            <td>
                @orderItem.Price
            </td>
            <td>
                @orderItem.Quantity
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2">Customer Name:</td>
            <td>@order.FirstName @order.LastName</td>
            <td rowspan="3">Total: @order.TotalPrice()</td>
        </tr>
        <tr>
            <td colspan="2">Adres:</td>
            <td>@order.Address</td>
        </tr>
        <tr>
            <td colspan="2">Phone:</td>
            <td>@order.Phone</td>
        </tr>
        <tr>
            <td colspan="2">Email:</td>
            <td>@order.Email</td>
        </tr>
        <tr>
            <td colspan="2">Payment Status:</td>
            <td>@order.PaymentTypes</td>
        </tr>

    </tfoot>
</table>
}


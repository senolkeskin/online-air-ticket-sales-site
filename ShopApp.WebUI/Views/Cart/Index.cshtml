@model CartModel
@{
    ViewData["Title"] = "Index";
}

<div class="row mt-5">
    <div class="col-md-8">
        <div class="text-left">
            <h4>Tickets</h4>
        </div>

        @if (Model.CartItems.Count() > 0)
        {     
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Ticket To</th>
                    <th>Ticket From</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                <tr>
                    <td>
                        <img src="~/img/@item.ImageUrl" width="80" />
                    </td>
                    <td>@item.To</td>
                    <td>@item.From</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Quantity*item.Price).ToString("c"))</td>
                    <td>
                        <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                            <input type="hidden" name="ticketId" value="@item.TicketId" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fa fa-times fa-fw"></i>
                            </button>
                        </form>
                        
                    </td>
                </tr>
                }
            </tbody>

        </table>
        }
        else
        {
            <div class="alert alert-warning">
                No Ticket in Cart!
            </div>
        }
    </div>
    <div class="col-md-4">

        @if (Model.CartItems.Count() > 0)
        {
            <div class="text-left">
                <h4>Tickets Summary</h4>
            </div>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Cart Total</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>
                    <tr>
                        <th>Order Total</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <a href="/" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left fa-fw"></i> Buy Another Ticket
                </a>
                <a href="/checkout" class="btn btn-primary">
                    Pay <i class="fa fa-arrow-circle-right fa-fw"></i>
                </a>
            </div>
        }
        </div>
</div>
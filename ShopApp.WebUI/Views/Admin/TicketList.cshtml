@model TicketListModel
@{
    ViewData["Title"] = "Index";
}

<h1>Admin Tickets</h1>
<hr />
@if (Model.Tickets.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>

                <td style="width:30px;">Id</td>
                <td style="width:100px;">Image</td>
                <td>To</td>
                <td>From</td>
                <td style="width:12px;">Price</td>
                <td style="width:150px;"></td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Tickets)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <img src="~/img/@item.ImageUrl" width="80" />
                    </td>
                    <td>@item.To</td>
                    <td>@item.From</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-primary btn-sm mr-2" href="/admin/tickets/@item.Id">Edit</a>
                        <form action="/admin/deleteticket" method="post" style="display:inline;">
                            <input type="hidden" name="ticketId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
        <tr>
            <td></td>
        </tr>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Tickets</h4>
    </div>
}


